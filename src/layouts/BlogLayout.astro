---
import { Breadcrumbs } from "astro-breadcrumbs"
import Layout from "~/layouts/PageLayout.astro"

const { meta } = Astro.props
---

<Layout {meta}>
  <div class="max-w-4xl px-4">
    <Breadcrumbs mainBemClass="breadcrumbs" />
  </div>
  <section class="sm:py-4 lg:py-8 mx-auto">
    <h1 class="text-center text-4xl font-bold leading-tighter tracking-tighter mb-8 md:mb-16 font-heading">
      <slot name="title" />
    </h1>
    <slot />
  </section>
</Layout>

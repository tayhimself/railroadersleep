---
const { quote, quote_author, class: className = "text-sm" } = Astro.props;
---

{
	quote && quote_author && (
		<div class="bg-gray-100 dark:bg-slate-700 px-6">
			<p class="leading-relaxed mt-0 mb-0 text-gray-800 dark:text-gray-200">"{quote}"</p>
			<footer class="text-base font-light text-right block text-gray-600 dark:text-gray-200">
				{quote_author}
			</footer>
		</div>
	)
}

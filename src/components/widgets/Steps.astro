---
import { Icon } from 'astro-icon';
import { Picture } from '@astrojs/image/components';
import { getPermalink } from '~/utils/permalinks.js';
---

<section>
  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 pt-8 py-6 lg:py-8 lg:pt-12">

	<div class="grid gap-6 row-gap-10 md:grid-cols-2">
		<div class="md:pb-6 md:pr-16">
			<h2 class="mb-8 text-2xl lg:text-3xl font-bold font-heading">
				Railroaders' Guide to Healthy Sleep
			</h2>
			<div class="flex">
				<div class="flex flex-col items-center mr-4">
					<div>
						<div class="flex items-center justify-center w-10 h-10 rounded-full border-secondary-500 border-2">
							<Icon name="tabler:arrow-down" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
						</div>
					</div>
					<div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
				</div>
        <a href={getPermalink('Smart Sleep Tips', 'category')}>
				<div class="pt-1 pb-8">
					<p class="mb-2 text-lg font-bold text-gray-900 dark:text-slate-300">Step 1</p>
					<p>
						Review Railroader specific strategies for health, sleep, and safety.
					</p>
				</div>
      </a>
			</div>
			<div class="flex">
				<div class="flex flex-col items-center mr-4">
					<div>
						<div class="flex items-center justify-center w-10 h-10 rounded-full border-secondary-500 border-2">
							<Icon name="tabler:arrow-down" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
						</div>
					</div>
					<div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
				</div>
        <a href={getPermalink('explore-sleep')}>
				<div class="pt-1 pb-8">
					<p class="mb-2 text-lg font-bold text-gray-900 dark:text-slate-300">Step 2</p>
					<p>
						Explore our sleep resources to learn more about how to get a better night's sleep.
					</p>
				</div>
        </a>
			</div>
			<div class="flex">
				<div class="flex flex-col items-center mr-4">
					<div>
						<div class="flex items-center justify-center w-10 h-10 rounded-full border-secondary-500 border-2">
							<Icon name="tabler:arrow-down" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
						</div>
					</div>
					<div class="w-px h-full bg-gray-300 dark:bg-slate-500"></div>
				</div>
				<div class="pt-1 pb-8">
					<p class="mb-2 text-lg font-bold text-gray-900 dark:text-slate-300">Step 3</p>
					<p>
						Screen yourself for sleep apnea and other sleep disorders.
					</p>
				</div>
			</div>
			<div class="flex">
				<div class="flex flex-col items-center mr-4">
					<div>
						<div class="flex items-center justify-center w-10 h-10 rounded-full border-primary-600 border-2">
							<Icon name="tabler:check" class="w-6 h-6 text-gray-600 dark:text-slate-200 icon-bold" />
						</div>
					</div>
				</div>
        <a href={getPermalink('balance')}>
				<div class="pt-1">
					<p class="mb-2 text-lg font-bold text-gray-900 dark:text-slate-300">Start!</p>
					<p class="text-gray-700"></p>
				</div>
        </a>
			</div>
		</div>
		<div class="relative">

			<Picture
				class="inset-0 object-cover object-center w-full rounded-md shadow-lg md:absolute md:h-full bg-gray-400 dark:bg-slate-700"
				src={import('~/assets/images/train-wide-angle.jpg')}
        widths={[400, 900]}
				alt="Rail yard"
				aspectRatio="841:645"
			/>
		</div>
	</div>
  </div>
</section>

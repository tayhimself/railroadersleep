---
const { embed_url, title, duration, description } = Astro.props;
---

<div class="bg-primary-50 dark:bg-slate-800 shadow-lg">
	<div class="relative overflow-hidden">
		<div class="h-full w-full">
			<div class="aspect-video my-auto">
				<iframe
					class="absolute w-full h-full"
					src={embed_url}
					allow="fullscreen https://player.vimeo.com; accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
				></iframe>
			</div>
		</div>
	</div>
	<div
		class="w-full h-1/2 text-gray-600 dark:text-slate-400 py-4 px-4"
	>
		<div class="flex flex-col">
      <div class="flex-grow basis-1/4">

        <span class="font-light md:font-medium text-sm md:text-base">{title}</span>
        <span class="text-xs md:text-sm font-light">({duration})</span>
      </div>
      <div class="text-sm md:text-base text-opacity-75">{description}</div>
    </div>
	</div>
</div>

---
const { embed_url, title, duration, description } = Astro.props;
---

<div class="bg-primary-50 dark:bg-slate-800 shadow-lg">
	<div class="relative overflow-hidden">
		<div class="h-full w-full">
			<div class="aspect-video my-auto">
				<iframe
					class="absolute w-full h-full"
					src={embed_url}
					allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
				></iframe>
			</div>
		</div>
	</div>
	<div
		class="w-full h-1/2 text-gray-600 dark:text-slate-400 py-4 flex flex-row justify-evenly"
	>
		<div class="basis-2/3 px-2">
	 		<span class="font-semibold">{title}</span>
      <span class="text-sm text-opacity-75">({duration})</span>
		</div>
		<div class="text-base text-opacity-75">{description}</div>
	</div>
</div>

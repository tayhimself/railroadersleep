---
import Picture from "~/components/core/Picture.astro";
import PostTags from "~/components/atoms/Tags.astro";
import Quote from "~/components/atoms/Quote.astro";
import Previous from "../atoms/Previous.astro";
import YouTube from "../core/YouTube.astro";

const { post } = Astro.props;
---

<section class="py-8 sm:py-16 lg:py-20 mx-auto">
	<article>
		<header>
			<h1
				class="px-4 sm:px-6 max-w-3xl mx-auto text-center text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-8 font-heading"
			>
				{post.title}
			</h1>
			<p class="max-w-3xl mx-auto text-center -mt-4 mb-8">
         ~ {Math.ceil(post.readingTime)} min read
			</p>
			{
				!post.video_url && post.image && (
					<Picture
						src={post.image}
						class="max-w-full lg:max-w-xl mx-auto mt-4 mb-6 sm:rounded-md bg-gray-400 dark:bg-slate-700"
						widths={[400, 900]}
						sizes="(max-width: 900px) 400px, 900px"
						alt={post.description}
						aspectRatio="16:9"
					/>
				)
			}
			{
				post.video_url && (
					<div class="container mx-auto px-8 sm:px-6 max-w-3xl mt-8">
                <YouTube embed_url={post.video_url} title={post.video_title} duration={post.video_duration} description={post.video_description} />
						</div>
				)
			}
		</header>
		<div
			class="container mx-auto px-6 sm:px-6 max-w-3xl lg:max-w-3xl prose lg:prose-lg dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary-600 dark:prose-a:text-primary-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
		>
      <Quote quote={post.quote} quote_author={post.quote_author} />
			{post.Content ? <post.Content /> : <Fragment set:html={post.body} />}
		</div>
		<div class="container mx-auto px-8 sm:px-6 max-w-3xl mt-8">
			<PostTags tags={post.tags} />
		</div>
	</article>
  <Previous />
</section>

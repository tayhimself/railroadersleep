---
import Picture from '~/components/core/Picture.astro';
import PostTags from '~/components/atoms/Tags.astro';

import { getPermalink } from '~/utils/permalinks';
import { findImage } from '~/utils/images';
import { getFormattedDate } from '~/utils/utils';

const { post, preference } = Astro.props;

const image = await findImage(post.image);

---

<article class="max-w-md mx-auto md:max-w-none grid md:grid-cols-2 gap-6 md:gap-8">
	<a class="relative block group" href={getPermalink(post.slug, 'post')}>
		<div
			class="relative h-0 pb-[56.25%] md:pb-[75%] md:h-80 lg:pb-[56.25%] overflow-hidden rounded shadow-lg"
		>
    { image && preference != 'video' &&
			<Picture
				src={image}
				class="absolute inset-0 object-contain w-full h-full mb-6 rounded shadow-lg"
				widths={[400, 900]}
				sizes="(max-width: 900px) 400px, 900px"
				alt={post.title}
				aspectRatio="16:9"
			/>
      }
    {(preference == 'video' || (!image && post.video_url)) &&
      <div class=" mb-6 rounded h-full w-full">
        <div class="aspect-video">
          <iframe class="absolute w-full h-full"
            src={post.video_url}
            allow="fullscreen https://player.vimeo.com; accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          ></iframe>
        </div>
      </div>
    }
    </div>
	</a>
	<div>
		<header>
			<h2 class="text-lg sm:text-xl font-bold leading-snug mb-2 font-heading">
				<a
					class="hover:text-primary-600 underline underline-offset-4 decoration-1 decoration-dotted transition ease-in duration-200"
					href={getPermalink(post.slug, 'post')}
				>
					{post.title}
				</a>
			</h2>
		</header>

    {!post.video_title && !post.video_description && (
		<p class="text-md sm:text-lg flex-grow">
			{post.excerpt || post.description.substring(0, 100)}...
		</p>
    )}
    {post.video_description && (
      <p class="text-md sm:text-lg flex-grow">{post.description}</p>
    )}
		<footer class="mt-4">
			<div>
				<span class="text-gray-500 dark:text-slate-400">
           ~ {Math.ceil(post.readingTime)} min read
				</span>
			</div>
			<div class="mt-4">
				<PostTags tags={post.tags} />
			</div>
		</footer>
	</div>
</article>

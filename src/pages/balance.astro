---
import { SITE} from "~/config.mjs";

import Layout from "~/layouts/BlogLayout.astro";

import Carousel from "~/components/blog/Carousel.astro";

import { fetchPosts, fetchCategories } from "~/utils/posts";


const posts = await fetchPosts();
//Fetch the sections  from the frontmatter of the files in the data/categories folder
const section = "Balance";
//const categories = new Set(["How Sleep Works", "Body Clock"]);
const readCategories = await fetchCategories(section);
const categoryNames = new Set(readCategories.map((category) => category.category));
const filteredposts = posts.filter((post) => categoryNames.has(post.category));
const postsbycategory = filteredposts.reduce((acc, post) => {
  acc[post.category] = acc[post.category] || [];
  acc[post.category].push(post);
  return acc;
}, {});
//import * as mainPost from '../../data/blog/tips.mdx'
import {Content as MainPost} from '../../data/categories/balance.mdx'
const meta = {
	title: section,
	description: SITE.description,
	noindex: true,
};
---

<Layout meta={meta}>

	<Fragment slot="title">
		{section}
	</Fragment>

  <div
  class="container mx-auto px-6 sm:px-6 max-w-4xl prose lg:prose-lg dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary-600 dark:prose-a:text-primary-400 prose-img:rounded-md prose-img:shadow-lg mt-8 mb-12"
>
  <MainPost />
</div>
  {Array.from(readCategories).map((category) => (
    <Carousel posts={postsbycategory[category.category]} category={category} />
    <hr/>
  ))}

</Layout>